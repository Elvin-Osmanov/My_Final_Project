@model Event
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h2>Detail</h2>
    <div class="card-group">
        <div class="card">

            <div class="card-body">
                <h5 class="card-title">Title: @Model.Title</h5>
                <p class="card-text">Venue: @Model.Desc</p>
                <p class="card-text">Event Date: @Model.EventDate.ToString("dd MMM")</p>

            </div>
        </div>
    </div>
    <div>
        <a asp-action="index" asp-controller="event" class="btn btn-outline-success mt-md-2">Back</a>
    </div>
</div>



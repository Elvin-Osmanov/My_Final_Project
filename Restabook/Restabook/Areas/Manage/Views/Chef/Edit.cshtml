@model Chef
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h2>Edit</h2>
    <form method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="@Model.FullName"></label>
                <input class="form-control" asp-for="@Model.FullName">
                <span asp-validation-for="@Model.FullName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="@Model.City"></label>
                <input class="form-control" asp-for="@Model.City">
                <span asp-validation-for="@Model.City" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="@Model.Desc"></label>
                <input class="form-control" asp-for="@Model.Desc">
                <span asp-validation-for="@Model.Desc" class="text-danger"></span>
            </div>
        </div>
       

        <div class="form-row">
           
            <div class="form-group col-md-3">
                <label asp-for="@Model.FacebookUrl"></label>
                <input class="form-control" asp-for="@Model.FacebookUrl">
                <span asp-validation-for="@Model.FacebookUrl" rows="3" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="@Model.TwitterUrl"></label>
                <input class="form-control" asp-for="@Model.TwitterUrl">
                <span asp-validation-for="@Model.TwitterUrl" rows="3" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="@Model.VkUrl"></label>
                <input class="form-control" asp-for="@Model.VkUrl">
                <span asp-validation-for="@Model.VkUrl" rows="3" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="@Model.InstagramUrl"></label>
                <input class="form-control" asp-for="@Model.InstagramUrl">
                <span asp-validation-for="@Model.InstagramUrl" rows="3" class="text-danger"></span>
            </div>

        </div>
        <div class="form-row">

            <div class="form-group col-md-12">
                <label asp-for="@Model.File"></label>
                <input class="form-control" asp-for="@Model.File">
                <span asp-validation-for="@Model.File" class="text-danger"></span>
            </div>
            <div style="margin-top:8px" class="photo-box">
                <input asp-for="@Model.Photo" hidden value="@Model.Id" />
                <div>
                    <img src="~/uploads/chefs/@Model.Photo" style="max-width:150px;position:relative" />
                    <i class="fas fa-times deletePhoto" style=" font-size: 20px; background: white; border: 2px solid red; border-bottom-right-radius: 5px; border-top-right-radius: 5px; color: red; position: absolute; left: 405px; text-align: center; line-height: 20px;"></i>
                </div>

            </div>
        </div>


        <button type="submit" class="btn btn-primary">Edit</button>
    </form>
</div>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
$(document).ready(function () {
            $(document).on("click", ".deletePhoto", function () {
                $(this).parent().empty()
            })
        })</script>
    
}


@model Chef
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h2>Detail</h2>
    <div class="card-group">
        <div class="card">
            <img src="~/uploads/chefs/@Model.Photo" class="card-img-top" style="width:250px;" alt="course image">
            <div class="card-body">
                <h5 class="card-title">FullName: @Model.FullName</h5>
                <p class="card-text">City: @Model.City</p>
                <p class="card-text">Desc: @Model.Desc</p>
                <p class="card-text">Desc: @Model.TwitterUrl</p>
                <p class="card-text">Facebook: @Model.FacebookUrl</p>
                <p class="card-text">Instagram: @Model.InstagramUrl</p>
                <p class="card-text">Vk: @Model.VkUrl</p>

            </div>
        </div>
    </div>
    <form method="post" asp-action="delete">
        <input name="id" value="@Model.Id" hidden />
        <button type="submit" class="btn btn-outline-danger mt-md-3"> Delete</button>
    </form>
</div>


@model Table
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
    List<Time> times = ViewBag.Times;
}

<div class="container-fluid">
    <h2>Detail</h2>
    <div class="card-group">
        <div class="card pl-3">
           
            <div class="card-body">
                <h5 class="card-title">Title: @Model.Date.ToString("dd MM yyyy")</h5>
                
                    Time:

                    @foreach (var item in times)
                    {
                        if (times[times.Count - 1] != item)
                        {
                            <p class="d-inline">@item.StartTime.ToString("HH:mm")</p> 
                        }
                        else
                        {
                            <p class="d-inline">@item.StartTime.ToString("HH:mm")</p>
                        }

                    }
              

            </div>
        </div>
    </div>
    <div>
        <a asp-action="index" asp-controller="table" class="btn btn-outline-success mt-md-2">Back</a>
    </div>
</div>


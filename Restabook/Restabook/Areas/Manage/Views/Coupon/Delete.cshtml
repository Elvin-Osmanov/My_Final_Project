@model Coupon
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h2>Detail</h2>
    <form method="post">
        <div class="form-group">
            <label asp-for="@Model.CouponName"></label>
            <input class="form-control" asp-for="@Model.CouponName" readonly>
            <span asp-validation-for="@Model.CouponName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.CouponDiscount"></label>
            <input class="form-control" asp-for="@Model.CouponDiscount" readonly>
            <span asp-validation-for="@Model.CouponDiscount" class="text-danger"></span>
        </div>

    </form>
    <form method="post" asp-action="delete">
        <input name="id" value="@Model.Id" hidden />
        <button type="submit" class="btn btn-outline-danger"> Delete</button>
    </form>
</div>


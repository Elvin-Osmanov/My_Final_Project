@model AppUser
@{ ViewData["Title"] = "Profile"; }



<div class="checkout-area pb-45 pt-65">
    <div class="container">
        <div class="row " style="display: flex; justify-content: center;">
            <div class="ml-auto mr-auto col-lg-6 ">
                <div class="checkout-wrapper">
                    <div id="faq" class="panel-group">
                        <div class="panel panel-default">
                            <div id="my-account-1" class="panel-collapse collapse show">
                                <div class="panel-body">
                                    <div class="billing-information-wrapper">

                                        <div class="account-info-wrapper mb-2">
                                            <h4>My Account Information</h4>
                                            <h5>Your Personal Details</h5>
                                        </div>
                                        <form method="post">
                                            <div class="row">
                                                <div class="col-lg-12 col-md-12">
                                                    <div class="billing-info">
                                                        <label class="form-label" asp-for="@Model.FullName">Fullname</label>
                                                        <input class="form-control" style="background-color:antiquewhite" asp-for="@Model.FullName" type="text">
                                                        <span asp-validation-for="@Model.FullName" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-lg-12 col-md-12">
                                                    <div class="billing-info">
                                                        <label class="form-label" asp-for="@Model.Email">Email Address</label>
                                                        <input class="form-control" style="background-color:antiquewhite" asp-for="@Model.Email">
                                                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-lg-12 col-md-12">
                                                    <div class="billing-info">
                                                        <label class="form-label" asp-for="@Model.CurrentPassword">Current Password</label>
                                                        <input class="form-control" style="background-color:antiquewhite" asp-for="@Model.CurrentPassword">
                                                        <span asp-validation-for="@Model.CurrentPassword" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-lg-12 col-md-12">
                                                    <div class="billing-info">
                                                        <label class="form-label" asp-for="@Model.Password">New Password</label>
                                                        <input class="form-control" style="background-color:antiquewhite" asp-for="@Model.Password">
                                                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-lg-12 col-md-12 mb-2">
                                                    <div class="billing-info">
                                                        <label class="form-label" asp-for="@Model.ConfirmPassword">Confirm  New Password</label>
                                                        <input class="form-control" style="background-color:antiquewhite" asp-for="@Model.ConfirmPassword">
                                                        <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                                                    </div>
                                                </div>

                                            </div>
                                            <div class="billing-btn mt-3">
                                                <button type="submit" class="btn btn-primary ">Save</button>
                                            </div>
                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}




@{
    ViewData["Title"] = "Review";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<h1>Reviews</h1>

<div class="container-fluid">

    <div class="row">
        @foreach (var review in Model)
        {
            <div class="col-md-4 mb-2">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@review.FullName - @review.Email</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Rate: @review.Rate</h6>
                        <p class="card-text">@review.Message</p>
                        <div class="d-flex justify-content-center">
                           
                            <form asp-action="DeleteReview" method="post">
                                <input type="hidden" name="id" value="@review.Id" />
                                <button class="btn btn-danger" type="submit">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }


    </div>
    <div>
        <a asp-action="index" asp-controller="product" class="btn btn-outline-success mt-md-2">Back</a>
    </div>
</div>

